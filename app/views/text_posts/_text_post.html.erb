<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      <%= text_post.title %>
    </h3>
    <%= link_to(
            "#{time_ago_in_words(text_post.created_at)} ago",
            post_path(text_post)) %>
  </div>

  <div class="panel-body">
    <p><em>By <%= link_to text_post.user.name, user_path(text_post.user) %></em></p>

    <p><%= text_post.body %></p>
  </div>
</div>
